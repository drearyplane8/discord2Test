<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.discord2test.LoginController"
      prefHeight="1080" prefWidth="1920" alignment="TOP_CENTER">

    <HBox alignment="CENTER"> <!-- this is ugly but i need to make it centre aligned -->
        <Text textAlignment="CENTER" text="Connect to Server" style="-fx-font-weight: bold; -fx-font-size: 36;"/>
        <!-- using fx css is necessary to make it bold? idk documentation bad -->
    </HBox>


    <VBox alignment="TOP_CENTER">

        <padding>
            <Insets top="100" bottom="10"/>
        </padding>

        <TextField text="Username" fx:id="nameField" prefWidth="400" prefHeight="30" maxWidth="500" maxHeight="40"
                   alignment="CENTER"/>
        <!-- some display weirdness: so i made it max height -->
        <Button text="Connect" onAction="#onConnect">
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Button> <!-- god damn fxml is ugly sometimes but it works -->
    </VBox>


</VBox>
